<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:text="输入内容:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="22sp"
        android:textColor="#494949"
        android:layout_height="wrap_content" />


    <com.example.android.apis.mydemo.views.KeyboardContainerView
        android:id="@+id/key_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.example.android.apis.mydemo.views.KeyboardInputView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginBottom="100dp" />

        <com.example.android.apis.mydemo.views.NumberKeyboardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.example.android.apis.mydemo.views.KeyboardContainerView>

</android.support.constraint.ConstraintLayout>