<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".mydemo.views.NumberKeyboardActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这里显示当前输入文字"
        android:textColor="#FF0000"
        android:textSize="14sp" />

    <com.example.android.apis.mydemo.views.KeyboardInputView
        android:id="@+id/keyboard_input_view"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@id/num_keyboard_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.example.android.apis.mydemo.views.NumberKeyboardView
        android:id="@+id/num_keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>