<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <com.example.android.apis.mydemo.views.VideoGestureStateView
        android:id="@+id/videoStateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="36dp"
        android:layout_alignParentBottom="true"
        android:background="#99FFFFFF">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="24dp"
            android:layout_centerVertical="true"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_video_play_state" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/iv_play"
            android:maxHeight="2dp"
            android:progressDrawable="@drawable/video_gesture_view_progress_horizontal"
            android:thumb="@drawable/seekbar_circle"
            android:thumbOffset="2dp" />


    </RelativeLayout>


</RelativeLayout>