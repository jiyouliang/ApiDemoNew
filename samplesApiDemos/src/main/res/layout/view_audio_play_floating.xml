<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#A8A8A8"
    android:minWidth="200dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_audio_album"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_audio_album"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="标题"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="07:20 第2节 章节名称"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>


    <com.example.android.apis.mydemo.views.CircleProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cpbRadius="15sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:cpbBackground="#FFFFFF"
        app:cpbStrokeWidth="2dp"
        app:cpbMax="100"
        app:cpbProgress="70"
        app:cpbProgressColor="#F70000" />


</RelativeLayout>